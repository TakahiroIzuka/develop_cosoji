$(function() {	//ページトップに戻るボタンをスクロールしたらふわっと表示	var $pagetop = $('#pagetop');        $pagetop.hide();    $(window).scroll(function () {    	console.log($(this).scrollTop());        if ($(this).scrollTop() > 100) {            $pagetop.fadeIn();        } else {            $pagetop.fadeOut();        }    });	//スムーススクロール	$('a[href^="#"]').click(function() {    	var speed = 400;    	var href= $(this).attr("href");    	var target = $(href == "#" || href == "" ? 'html' : href);    	var position = target.offset().top;    	$('body,html').animate({scrollTop:position}, speed, 'swing');    	return false;	});　　	//要素の高さを揃える	$('.usage-item-paragraph').matchHeight();        $(".qanda-title").on('click',function(){        $(this).toggleClass('active');        $(this).next(".qanda-data").slideToggle();    });});